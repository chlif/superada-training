<section class="row">
  <div class="col">

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval=false>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <h3>Welcome! Answer a few questions to see what IT role you are best suited for. </h3>
          <button class="btn btn-success btn-lg btn-block" href="#carouselExampleControls"role="button" data-button-name="start">Start!

          </button>
        </div>
        {{#each survey.data.questions}}
        <div class="carousel-item">
          <div class="container">
            <section class="row">
              <h3>{{text}}</h3>
            </section>

            <section class="row">
              <h5>{{instruction}}</h5>
              {{#if timer}}
              <h5 id="timer"></h5>
              {{/if}}
            </section>
            <section class="row">
            {{#each buttons}}
              <div class="col-6">
                <button class="btn btn-success btn-lg btn-block" href="#carouselExampleControls" role="button" data-toggle="button" data-button-name={{option}}>
                  {{#if imageLabels}}
                    <img src="{{label}}">
                  {{else}}
                    {{label}}
                  {{/if}}
                </button>
              </div>
            {{/each}}
            </section>
            <section class="row">
              {{#if multiselect}}
                <div class="col">
                  <button class="btn btn-light btn-lg btn-block" href="#carouselExampleControls" role="button" data-toggle="button" data-button-name="start">Next</button>
                </div>
              {{/if}}
            </section>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

  </div>
</section>
<script src="/javascripts/timer.js" type="text/javascript"></script>
<script src="/javascripts/survey.js" type="text/javascript"></script>
